{
  "name": "ipld-explorer",
  "description": "Explore the Merkle Forest from the comfort of your browser",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "test": "run-s test:unit test:e2e",
    "test:unit": "vitest run --environment=node",
    "test:unit-playwright": "playwright test -c playwright-ct.config.js",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test -c playwright.config.js",
    "bundlesize": "bundlesize",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@ipfs-shipyard/ignite-metrics": "^2.0.0",
    "dag-jose": "^4.0.0",
    "i18next-chained-backend": "^4.6.2",
    "i18next-localstorage-backend": "^4.2.0",
    "internal-nav-helper": "^3.1.0",
    "ipfs-css": "^1.4.0",
    "ipld-explorer-components": "^5.1.2",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-virtualized": "^9.22.5",
    "redux-bundler": "^26.0.0",
    "redux-bundler-react": "^1.2.0",
    "tachyons": "^4.12.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@playwright/experimental-ct-react": "^1.40.1",
    "@playwright/test": "^1.40.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-c8": "^0.32.0",
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "bundlesize": "^0.18.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.7",
    "jsdom": "^23.0.1",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.0",
    "prettier": "^3.1.0",
    "puppeteer": "^21.5.2",
    "react-test-renderer": "^18.2.0",
    "regenerator-runtime": "^0.14.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "vite": "^5.0.4",
    "vite-plugin-svgr": "^4.2.0",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^0.34.6"
  },
  "overrides": {
    "ipld-explorer-components": {
      "i18next-icu": "^2.3.0",
      "intl-messageformat": "^10.3.3",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "react-helmet": "^6.1.0",
      "redux-bundler": "^26.0.0",
      "i18next-chained-backend": "^9.12.0"
    },
    "enzyme-adapter-react-16": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not ie <= 99",
    "not android <= 4.4.4",
    "not dead",
    "not op_mini all"
  ],
  "bundlesize": [
    {
      "path": "./build/static/js/*.js",
      "maxSize": "600 kB"
    },
    {
      "path": "./build/static/css/*.css",
      "maxSize": "18 kB"
    }
  ],
  "homepage": "./"
}
